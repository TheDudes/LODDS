<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studyproject.gui.mainWindow.logArea.LogAreaPresenter">
   <top>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fillWidth="false" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Basic Logs" />
                  <HBox spacing="5.0">
                     <children>
                        <CheckBox fx:id="errorCB" mnemonicParsing="false" text="Error" />
                        <CheckBox fx:id="infoCB" mnemonicParsing="false" text="Info" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <Canvas height="25.0" width="100.0" HBox.hgrow="ALWAYS" />
            <VBox fillWidth="false" prefHeight="44.0" prefWidth="225.0" HBox.hgrow="NEVER">
               <children>
                  <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="248.0" text="Protocoll" textAlignment="CENTER" />
                  <HBox spacing="5.0">
                     <children>
                        <CheckBox fx:id="getRecCB" mnemonicParsing="false" text="get Rec." />
                        <CheckBox fx:id="getSentCB" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="get Sent" />
                        <CheckBox fx:id="broadcastCB" layoutX="83.0" layoutY="10.0" mnemonicParsing="false" text="broadcast" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="logTableView" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="timestampCol" minWidth="20.0" prefWidth="75.0" text="Timestamp" />
          <TableColumn fx:id="logKeyCol" minWidth="20.0" prefWidth="75.0" text="LogKey" />
          <TableColumn fx:id="apiLvlCol" prefWidth="75.0" text="APILvl" />
            <TableColumn fx:id="thrownByCol" prefWidth="75.0" text="Thrown By" />
            <TableColumn fx:id="msgCol" prefWidth="374.0" text="Message" />
        </columns>
      </TableView>
   </center>
</BorderPane>
